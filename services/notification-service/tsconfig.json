{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2020",
      "lib": ["es2020"],
      "strict": true,
      "declaration": true,
      "removeComments": true,
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "incremental": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"]
  }
  